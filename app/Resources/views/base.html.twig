{% extends "OroUIBundle:Default:index.html.twig" %}

{% block head_script %}
    {{ parent() }}
    <script type="text/javascript">
        require(['pim/init']);
    </script>
    {{ block('head_script_component') }}
{% endblock %}

{% block head_style %}
    {% stylesheets
        'bundles/pimui/css/pim.less'
        'bundles/pimui/css/bootstrap-datetimepicker.min.css'
        'bundles/pimui/css/slimbox2.css'
        'bundles/pimui/css/font-awesome/font-awesome.min.css'
        'bundles/pimui/css/flags.less'

        debug=false
        filter='cssrewrite,lessphp'
        output='css/pim_all.css'
    %}
    <link rel="stylesheet" media="all" href="{{ asset_url }}" />
    {% endstylesheets %}
    {{ parent() }}
    {{ block('head_style_component') }}
{% endblock %}

{% block main %}
    {{ parent() }}
    {{ oro_windows_restore() }}
{% endblock %}
