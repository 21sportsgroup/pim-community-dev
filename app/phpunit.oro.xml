<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    backupGlobals="false"
    backupStaticAttributes="false"
    colors="true"
    convertErrorsToExceptions="true"
    convertNoticesToExceptions="true"
    convertWarningsToExceptions="true"
    processIsolation="false"
    stopOnFailure="false"
    syntaxCheck="false"
    bootstrap="bootstrap.php.cache" >

    <php>
        <ini name="intl.default_locale" value="en"/>
        <ini name="intl.error_level" value="0"/>
        <ini name="memory_limit" value="-1"/>
        <ini name="zend.enable_gc" value="0"/>
    </php>

    <testsuites>

        <!-- ORO test suites -->
        <testsuite name="Oro_Unit_Test">
            <directory suffix="Test.php">../src/Oro/Bundle/*Bundle/Tests/Unit</directory>
        </testsuite>
        <testsuite name="Oro_Functional_Test">
            <directory suffix="Test.php">../src/Oro/Bundle/*Bundle/Tests/Functional</directory>
        </testsuite>
        <testsuite name="Oro_Performance_Test">
            <directory suffix="Perf.php">../src/Oro/Bundle/*Bundle/Tests/Performance</directory>
        </testsuite>
        
        <!-- Jenkins test suite -->
        <testsuite name="Jenkins_Oro_Test">
            <directory suffix="Test.php">../src/Oro/Bundle/*Bundle/Tests/Unit</directory>
            <directory suffix="Test.php">../src/Oro/Bundle/*Bundle/Tests/Functional</directory>
        </testsuite>
        
    </testsuites>

    <filter>
        <whitelist>
            <directory>../src/Oro</directory>
            <exclude>
                <directory>../src/*/*Bundle/Resources</directory>
                <directory>../src/*/*Bundle/Tests</directory>
                <directory>../src/*/Bundle/*Bundle/Resources</directory>
                <directory>../src/*/Bundle/*Bundle/Tests</directory>
                <directory>../src/*/Bundle/*Bundle/vendor</directory>
                <directory>../src/*/Bundle/*Bundle/cov</directory>
            </exclude>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-html" target="build/coverage" title="Oro Coverage" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70"/>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
        <log type="junit" target="build/logs/junit.xml" logIncompleteSkipped="false"/>
    </logging>

</phpunit>
