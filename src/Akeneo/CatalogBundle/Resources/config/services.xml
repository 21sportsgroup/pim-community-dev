<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- dotrine eav test implementation -->
        <service id="akeneo.catalog.model_producttype_doctrine" class="Akeneo\CatalogBundle\Model\Doctrine\ProductType">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
        <service id="akeneo.catalog.model_product_doctrine" class="Akeneo\CatalogBundle\Model\Doctrine\Product">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>

        <!-- mongo document test implementation -->
        <service id="akeneo.catalog.model_producttype_mongo" class="Akeneo\CatalogBundle\Model\MongoDB\ProductType">
            <argument type="service" id="doctrine.odm.mongodb.document_manager" />
        </service>
        <service id="akeneo.catalog.model_product_mongo" class="Akeneo\CatalogBundle\Model\MongoDB\Product">
            <argument type="service" id="doctrine.odm.mongodb.document_manager" />
        </service>
        
        <!-- used implementation on others bundles -->
        <service id="akeneo.catalog.model_producttype" class="Akeneo\CatalogBundle\Model\MongoDB\ProductType">
            <argument type="service" id="doctrine.odm.mongodb.document_manager" />
        </service>
        <service id="akeneo.catalog.model_product" class="Akeneo\CatalogBundle\Model\MongoDB\Product">
            <argument type="service" id="doctrine.odm.mongodb.document_manager" />
        </service>

    </services>
    
</container>
