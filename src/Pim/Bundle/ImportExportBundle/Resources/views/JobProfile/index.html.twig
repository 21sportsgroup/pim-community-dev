{% extends 'PimImportExportBundle::layout.html.twig' %}

{% block head_script %}
    {{ parent() }}

    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#job-grid'} %}
{% endblock %}

{% block content %}

    {% set buttons %}
        {% if resource_granted(createRouteAcl) %}
            {{ elements.createBtn(
                entityName,
                null,
                { 'id': 'create-job', 'data-form': 'dialog', 'data-form-url': createRoute }
            ) }}
            <script type="text/javascript">
                require(
                    ['jquery', 'pim/dialogform'],
                    function ($, dialogForm) {
                        'use strict';
                        $(function() {
                            new dialogForm('#create-job');
                        });
                    }
                );
            </script>
        {% endif %}
    {% endset %}

    {{ elements.page_header((entityName ~ '.overview')|trans, buttons) }}

    <div id="job-grid"></div>

{% endblock %}
