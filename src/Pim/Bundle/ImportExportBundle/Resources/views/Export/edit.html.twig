{% extends 'PimProductBundle::layout.html.twig' %}

{% block content %}

    {{ JSFV(form) }}
    <form method="POST" class="form-horizontal" action="{{ path('pim_ie_export_edit', { 'id': form.vars.value.id }) }}" {{ form_enctype(form) }}>

        {% set title = 'Edit export'|trans %}

        {% set buttons %}
            {{ elements.backLink(path('pim_ie_export_index')) }}
            {{ elements.deleteLink(path('pim_ie_export_remove', { 'id': form.vars.value.id })) }}
            {{ elements.submitBtn }}
        {% endset %}

        {{ elements.page_header(title, buttons) }}

        {{ elements.form_errors(form) }}
        {{ form_row(form.code) }}
        {{ form_row(form.label) }}

        {% for step in form.jobDefinition.steps %}
            {{ elements.accordion({ ('Step'|trans ~ ' ' ~ loop.index): form_widget(step) }, loop.index) }}
        {% endfor %}

        {{ form_rest(form) }}
    </form>
{% endblock %}
