{% extends 'PimProductBundle::layout.html.twig' %}

{% block page_container %}
<div class="container-fluid product-edit">

    {% block content %}

    {{ JSFV(form) }}
    <form method="POST" class="form-horizontal" action="{{ path('pim_ie_export_create') }}" {{ form_enctype(form) }}>

        {% set title = 'Export creation'|trans %}

        {% set buttons %}
            <div class="btn-group icons-holder">
                <a class="btn" href="{{ path('pim_ie_export_index') }}" title="{{ 'Back to grid' | trans }}"><i class="icon-chevron-left"></i></a>
            </div>
            <div class="btn-group">
                <button type="submit" class="btn btn-primary"><i class="hide-text">Save </i> {{ ' Save'|trans }}</button>
            </div>
        {% endset %}

        {{ elements.page_header(title, buttons) }}

        <div class="layout-content">
            {{ form_row(form) }}
        </div>
    </form>
    {% endblock %}
</div>
{% endblock %}
