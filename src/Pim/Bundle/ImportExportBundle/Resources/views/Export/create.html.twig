{% extends 'PimProductBundle::layout.html.twig' %}

{% block content %}

    {{ JSFV(form) }}
    <form method="POST" class="form-horizontal" action="{{ path('pim_ie_export_create', { 'connector': connector, 'alias': alias }) }}" {{ form_enctype(form) }}>

        {% set title = 'Create export'|trans %}

        {% set buttons %}
            {{ elements.backLink(path('pim_ie_export_index')) }}
            {{ elements.submitBtn }}
        {% endset %}

        {{ elements.page_header(title, buttons) }}

        {{ elements.form_errors(form) }}
        <div class="layout-content">
            {{ form_row(form.code) }}
            {{ form_row(form.label) }}

            {% for step in form.jobDefinition.steps %}
                {{ elements.accordion({ ('Step'|trans ~ ' ' ~ loop.index): form_widget(step) }, loop.index) }}
            {% endfor %}
        </div>
        {{ form_rest(form) }}
    </form>
{% endblock %}
