{% extends 'PimProductBundle::layout.html.twig' %}

{% block content %}

    {{ JSFV(form) }}
    <form method="POST" class="form-horizontal" action="{{ actionRoute }}" {{ form_enctype(form) }}>

        {% set buttons %}
            {{ elements.backLink(indexRoute) }}
            {% if form.vars.value.id %}
                {{ elements.deleteLink(removeRoute) }}
            {% endif %}
            {{ elements.submitBtn }}
        {% endset %}

        {{ elements.page_header(title, buttons) }}

        {{ elements.form_errors(form) }}

        {% set navbarTabs = ['General properties'] %}

        {% for step in form.jobDefinition.steps %}
            {% set navbarTabs = navbarTabs|merge(['Step'|trans ~ ' ' ~ loop.index]) %}
        {% endfor %}

        {{ elements.form_navbar(navbarTabs) }}

        <div class="row-fluid tab-content">
            <div class="tab-pane buffer-top active" id="general-properties">
                {{ form_row(form.code) }}
                {{ form_row(form.label) }}
            </div>

            {% set accordionCount = 0 %}
            {% for step in form.jobDefinition.steps %}
                <div class="tab-pane" id="step-{{ loop.index }}">
                    {% for child in step.children %}
                        {% set accordionCount = accordionCount + 1 %}
                        {{ elements.accordion({ (child.vars.label): form_widget(child) }, accordionCount) }}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>

        {{ form_rest(form) }}
    </form>
{% endblock %}
