{% macro submitBtn(text, icon) %}
{% spaceless %}
    {% set text = text ? text : 'Save' %}
    <button type="submit" class="btn btn-primary" title="{{ text|trans }}">
        {% if icon %}
            <i class="fa-icon-{{ icon }}"></i>
        {% endif %}
        {{ text|trans }}
    </button>
{% endspaceless %}
{% endmacro %}

{% macro link(text, url, opts = {}) %}
{% spaceless %}
    {% set title = opts.title is defined ? opts.title : text %}
    {% set icon = opts.icon is defined ? opts.icon : null %}
    <a{% if opts.id is defined %} id="{{ opts.id }}"{% endif %} class="btn{% if text and icon %} icons-holder-text{% elseif icon %} icons-holder{% endif %}" href="{{ url ? url : 'javascript: void(0);' }}"{% if title %} title="{{ title|trans }}"{% endif %}{% if opts.attr is defined %}{% for key, value in opts.attr %} {{ key }}="{{ value }}"{% endfor %}{% endif %}>
        {% if icon %}<i class="fa-icon-{{ icon }}"></i>{% endif %}
        {{ text|trans }}
    </a>
{% endspaceless %}
{% endmacro %}

{% macro page_header(title, buttons, subtitle, left, right) %}
    <div class="navigation clearfix navbar-extra">
        <div class="row-fluid">
            {% if buttons is not empty %}
                <div class="navbar-buttons pull-right">
                    {{ buttons }}
                </div>
            {% endif %}
            <div class="navbar-content pull-left">
                <div class="navbar-title clearfix-oro">
                    <div class="sub-title">{{ title }}</div>
                    {% if subtitle is not empty %}
                        <span class="separator">/</span>
                        <div class="sub-title">{{ subtitle }}</div>
                    {% endif %}
                </div>
                {{ left }}
           </div>
            {{ right }}
        </div>
    </div>
{% endmacro %}

{% macro form_navbar(tabs) %}
    <div id="form-navbar" class="navbar navbar-static scrollspy-nav">
        <div class="navbar-inner">
            <div class="row-fluid">
                {% if tabs is not empty %}
                    <ul class="nav">
                        {% if tabs is iterable %}
                            {% for tab in tabs %}
                                <li{% if loop.first %} class="active"{% endif %}><a href="#{{ tab|lower }}" data-toggle="tab">{{ tab|trans }}</a></li>
                            {% endfor %}
                        {% else %}
                            <li class="active"><a href="#{{ tabs|lower }}" data-toggle="tab">{{ tabs|trans|capitalize }}</a></li>
                        {% endif %}
                    </ul>
                {% endif %}
            </div>
        </div>
    </div>
{% endmacro %}

{% macro form_errors(form) %}
    {% if form.vars.errors|length %}
        <div class="alert alert-error fade in top-messages">
            <a class="close" data-dismiss="alert" href="#">Ã—</a>
            <div class="message">
                {{ form_errors(form) }}
            </div>
        </div>
    {% endif %}
{% endmacro %}
