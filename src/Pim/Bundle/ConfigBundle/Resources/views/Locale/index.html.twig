{% extends 'PimConfigBundle::layout.html.twig' %}

{% block head_script %}
    {{ parent() }}

    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#locale-grid'} %}
    {% include 'OroGridBundle:Include:stylesheet.html.twig' %}
{% endblock %}

{% block page_container %}
<div class="container-fluid">
    {% block content %}

    {% set title = 'Locales overview'|trans %}

    {% set buttons = elements.createBtn('New locale', path('pim_config_locale_create')) %}

    {{ elements.page_header(title, buttons) }}

    <div id="locale-grid"></div>

    {% endblock %}
</div>
{% endblock %}
