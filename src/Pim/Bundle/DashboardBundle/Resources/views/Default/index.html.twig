                <li>
                    <a href="{{ path('pim_catalogtaxinomy_source_index') }}" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-icon-primary" role="button">
                        <span class="ui-button-icon-primary ui-icon ui-icon-fugue-arrow-in"></span>
                        <span class="ui-button-text">{{ "pim.catalogtaxinomy.sources" | trans }}</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="block-dashboard ui-corner-all">
            <h2>{{ "pim.dashboard.title.enrich" | trans }}</h2>
            <ul>
