        <div class="block-dashboard ui-corner-all">
            <h2>{{ "pim.dashboard.title.export" | trans }}</h2>
            <ul>
                <li>
                    <a href="{{ path('pim_catalogtaxinomy_channel_index') }}" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-icon-primary" role="button">
                        <span class="ui-button-icon-primary ui-icon ui-icon-fugue-arrow-out"></span>
                        <span class="ui-button-text">{{ "pim.catalogtaxinomy.channels" | trans }}</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="block-dashboard ui-corner-all">
            <h2>{{ "pim.dashboard.title.configure" | trans }}</h2>
            <ul>
                <li>
                    <a href="{{ path('pim_catalogtaxinomy_locale_index') }}" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-icon-primary" role="button">
                        <span class="ui-button-icon-primary ui-icon ui-icon-fugue-locale-alternate"></span>
