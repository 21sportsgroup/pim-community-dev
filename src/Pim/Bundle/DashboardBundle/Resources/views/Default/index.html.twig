                        <span class="ui-button-text">{% trans %}dashboard.product-sets</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('pim_catalog_productattribute_index') }}" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-icon-primary" role="button">
                        <span class="ui-button-icon-primary ui-icon ui-icon-fugue-tags"></span>
                        <span class="ui-button-text">{% trans %}dashboard.product-attributes</span>
                    </a>
                </li>
            </ul>
        </div>

        <div class="block-dashboard ui-corner-all">
            <h2>{% trans %}dashboard.title.import-export</h2>
            <ul>
                <li>
                    <a href="{{ path('pim_connectoricecat_supplier_list') }}" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-icon-primary" role="button">
                        <span class="ui-button-icon-primary ui-icon ui-icon-connector-icecat"></span>
                        <span class="ui-button-text">{% trans %}dashboard.connector-icecat</span>
                    </a>
                </li>
