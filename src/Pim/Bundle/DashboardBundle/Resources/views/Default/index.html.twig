{% extends 'PimUIBundle::layout.html.twig' %}

{% block title %}{{ parent() }} {{ "pim.dashboard.title.home" | trans }{% endblock %}

{% block content_menu '' %}

{% block content %}

    <div class="blocks-dashboard">

        <div class="block-dashboard ui-corner-all">
            <h2>{{ "dashboard.title.enrich" | trans }</h2>
            <ul>
                <li>
                    <a href="{{ path('pim_catalog_product_index') }}" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-icon-primary" role="button">
                        <span class="ui-button-icon-primary ui-icon ui-icon-fugue-documents"></span>
                        <span class="ui-button-text">{{ "dashboard.products" | trans }</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('pim_catalog_productset_index') }}" class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-icon-primary" role="button">
