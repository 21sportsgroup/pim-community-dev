{% extends 'PimProductBundle::layout.html.twig' %}

{% block content %}

{{ JSFV(form) }}
<form class="form-horizontal" action="{{ form.vars.value.id ?
    path('pim_product_exportprofile_edit', { id: form.vars.value.id }) :
    path('pim_product_exportprofile_create') }}" method="POST">

    {% set title = form.vars.value.id ? 'Export profile'|trans ~ ' - ' ~ form.vars.data.name : 'New export profile'|trans %}
    {% set buttons %}
        {{ elements.submitBtn }}
        {% if form.vars.value.id %}
            {{ elements.deleteLink(path('pim_product_exportprofile_remove', { id: form.vars.value.id }), 'Are you sure you want to delete this export profile?') }}
        {% endif %}
    {% endset %}

    {{ elements.page_header(title, buttons) }}

    <div class="form-row">
        {{ elements.form_errors(form) }}

        <div id="accordion1" class="accordion">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#collapseOne">
                        <i class="fa-icon-collapse-alt"></i>
                        {{ "General Properties"|trans }}
                    </a>
                </div>
                <div id="collapseOne" class="accordion-body in">
                    <div class="accordion-inner">
                        {{ form_row(form.code) }}
                    </div>
                </div>
            </div>
        </div>

        <div id="accordion2" class="accordion">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
                        <i class="fa-icon-collapse-alt"></i>
                        {{ "Export profile values"|trans }}
                    </a>
                </div>
                <div id="collapseTwo" class="accordion-body in">
                    <div class="accordion-inner">
                        {{ form_row(form.name) }}
                    </div>
                </div>
            </div>
        </div>

        {{ form_row(form._token) }}

    </div>

</form>
{% endblock %}
