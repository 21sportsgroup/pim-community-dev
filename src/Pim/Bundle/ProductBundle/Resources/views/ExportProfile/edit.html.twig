{% extends 'PimProductBundle::layout.html.twig' %}

{% block content %}

{{ JSFV(form) }}
<form id="{{ form.vars.id }}" class="form-horizontal" action="{{ form.vars.value.id ?
    path('pim_product_exportprofile_edit', { id: form.vars.value.id }) :
    path('pim_product_exportprofile_create') }}" method="POST">

    {% set title = form.vars.value.id ? 'Export profile'|trans ~ ' - ' ~ form.vars.data.name : 'New export profile'|trans %}
    {% set buttons %}
        {{ elements.submitBtn }}
        {% if form.vars.value.id %}
            {{ elements.deleteLink(path('pim_product_exportprofile_remove', { id: form.vars.value.id }), 'Are you sure you want to delete this export profile?') }}
        {% endif %}
    {% endset %}

    {{ elements.page_header(title, buttons) }}

    <div class="form-row">
        {{ elements.form_errors(form) }}

        {{ elements.accordion({ 'General Properties': form_row(form.code), 'Export profile values': form_row(form.name) }) }}

        {{ form_row(form._token) }}
    </div>

</form>
{% endblock %}
