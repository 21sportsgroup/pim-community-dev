<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="pim.connector_icecat.connector_service.class">Pim\Bundle\ConnectorIcecatBundle\Service\ConnectorService</parameter>
        <parameter key="pim.connector_icecat.config_manager.class">Pim\Bundle\ConnectorIcecatBundle\Model\ConfigManager</parameter>
    </parameters>

    <services>
        <service id="pim.connector_icecat.icecat_service" class="%pim.connector_icecat.connector_service.class%">
            <argument type="service" id="service_container" />
            <tag name="akeneo.connector" />
        </service>
        <service id="pim.connector_icecat.config_manager" class="%pim.connector_icecat.config_manager.class%">
            <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
    </services>

</container>
