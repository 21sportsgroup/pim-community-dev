<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="pim.catalog.product_manager.class">Pim\Bundle\CatalogBundle\Doctrine\ProductManager</parameter>
        <parameter key="pim.catalog.product_setmanager.class">Pim\Bundle\CatalogBundle\Doctrine\ProductSetManager</parameter>
        <parameter key="pim.catalog.product_groupmanager.class">Pim\Bundle\CatalogBundle\Doctrine\ProductGroupManager</parameter>
    </parameters>

    <services>
        <service id="pim.catalog.product_manager" class="%pim.catalog.product_manager.class%">
            <!-- to switch to orm impl -->
             <argument type="service" id="doctrine.orm.entity_manager" />
<!--             <argument type="service" id="doctrine.odm.mongodb.document_manager" />-->
        </service>
        <service id="pim.catalog.product_setmanager" class="%pim.catalog.product_setmanager.class%">
             <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
        <service id="pim.catalog.product_groupmanager" class="%pim.catalog.product_groupmanager.class%">
             <argument type="service" id="doctrine.orm.entity_manager" />
        </service>
    </services>

</container>
