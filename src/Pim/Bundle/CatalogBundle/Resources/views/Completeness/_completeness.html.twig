{% if value|length == 0 %}-{% endif %}
{% for completeness in value %}
    {% if completeness.locale.code == locale and completeness.channel.code == channel %}
        {% if completeness.ratio == 100 %}
            {% set class = 'success' %}
        {% elseif completeness.ratio == 0 %}
            {% set class = 'important' %}
        {% else %}
            {% set class = 'warning' %}
        {% endif %}
        <span class="label label-{{ class }}">{{ completeness.ratio }}%</span>
    {% endif %}
{% endfor %}
