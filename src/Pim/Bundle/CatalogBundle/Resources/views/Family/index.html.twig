{% extends 'PimCatalogBundle::layout.html.twig' %}

{% block head_script %}
    {{ parent() }}

    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#family-grid'} %}
    {% include 'OroGridBundle:Include:stylesheet.html.twig' %}
{% endblock %}

{% block content %}

    {% set title = 'family.overview'|trans %}

    {% set buttons %}
        {{ elements.createBtn(
            'family',
            null,
            { 'id': 'create-family', 'data-form': 'dialog', 'data-form-url': path('pim_catalog_family_create') }
        ) }}
        <script type="text/javascript">
            require(
                ['jquery', 'pim/dialogform'],
                function ($, DialogForm) {
                    'use strict';
                    $(function() {
                        new DialogForm('#create-family');
                    });
                }
            );
        </script>
    {% endset %}

    {{ elements.page_header(title, buttons) }}

    <div id="family-grid"></div>

{% endblock %}
