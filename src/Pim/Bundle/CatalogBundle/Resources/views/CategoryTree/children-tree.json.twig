{% set children %}
    [{% for category in categories %}
        {% include 'PimCatalogBundle:CategoryTree:_category_tree.html.twig'
            with {
                'category': category['item'],
                'product_count': product_count,
                'nested': nested,
                'children': category['__children']
            } %}
        {% if not loop.last %},{% endif %}
    {% endfor %}]
{% endset %}

{% if parent is not null %}
    {% include 'PimCatalogBundle:CategoryTree:_category_tree.html.twig'
            with { 'category': parent, 'product_count': product_count, 'nested': nested, 'children': children } %}
{% else %}
    {{ children }}
{% endif %}