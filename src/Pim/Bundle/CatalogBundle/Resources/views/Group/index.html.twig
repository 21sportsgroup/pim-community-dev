{% extends 'PimCatalogBundle::layout.html.twig' %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

{% block content %}

    {% if title is not defined %}
        {% set title = 'group.overview'|trans %}
    {% endif %}

    {% if buttons is not defined %}
        {% set buttons %}
            {{ elements.createBtn(
                'group',
                path('pim_catalog_group_create'),
                'dialog',
                'pim_catalog_group_create'
            ) }}
        {% endset %}
    {% endif %}

    {{ elements.page_header(title, buttons) }}

    {{ dataGrid.renderGrid('group-grid') }}

{% endblock %}
