{% extends 'PimCatalogBundle:Group:index.html.twig' %}

{% block content %}
    {% set title = 'variant group.overview'|trans %}

    {% set buttons %}
        {% if resource_granted('pim_catalog_group_create') %}
            {{ elements.createBtn(
                'variant group',
                null,
                { 'id': 'create-group', 'data-form': 'dialog', 'data-form-url': path('pim_catalog_variant_group_create') }
            ) }}
            <script type="text/javascript">
                require(
                    ['jquery', 'pim/dialogform'],
                    function ($, dialogForm) {
                        'use strict';
                        $(function() {
                            new dialogForm('#create-group');
                        });
                    }
                );
            </script>
        {% endif %}
    {% endset %}

    {{ parent() }}
{% endblock %}
