{% extends 'PimCatalogBundle::layout.html.twig' %}

{% block head_script %}
    {{ parent() }}

    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#association-grid'} %}
    {% include 'OroGridBundle:Include:stylesheet.html.twig' %}
{% endblock %}

{% block content %}

    {% set title = 'association.overview'|trans %}

    {% set buttons %}
        {{ elements.createBtn(
            'association',
            path('pim_catalog_association_create'),
            'dialog',
            'pim_catalog_association_create'
        ) }}
    {% endset %}

    {{ elements.page_header(title, buttons) }}

    <div id="association-grid"></div>

{% endblock %}
