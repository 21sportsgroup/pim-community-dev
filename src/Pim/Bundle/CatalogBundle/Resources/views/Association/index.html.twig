{% extends 'PimCatalogBundle::layout.html.twig' %}
{% import 'OroDataGridBundle::macros.html.twig' as dataGrid %}

{% block content %}

    {% set title = 'association.overview'|trans %}

    {% set buttons %}
        {{ elements.createBtn(
            'association',
            null,
            { 'id': 'create-association', 'data-form': 'dialog', 'data-form-url': path('pim_catalog_association_create') }
        ) }}
        <script type="text/javascript">
            require(
                ['jquery', 'pim/dialogform'],
                function ($, DialogForm) {
                    'use strict';
                    $(function() {
                        new DialogForm('#create-association');
                    });
                }
            );
        </script>
    {% endset %}

    {{ elements.page_header(title, buttons) }}

    {{ dataGrid.renderGrid('association-grid', { localeCode: localeCode }) }}

{% endblock %}
