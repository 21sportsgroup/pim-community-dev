{% extends 'PimCatalogBundle::layout.html.twig' %}

{% oro_title_set({ params: { '%grouptype.code%': form.vars.value.code } }) %}

{% block content %}
    {{ JSFV(form) }}

        {% set title = 'grouptype.edit'|trans ~ ' - ' ~ form.vars.value.code %}

        {% set confirmationMessage = 'confirmation.remove.grouptype'|trans({ '%name%': form.vars.value.code }) %}
        {% set buttons %}
            {{ elements.backLink(path('pim_catalog_group_type_index')) }}
            {{
                elements.deleteLink(
                    path('pim_catalog_group_type_remove', { id: form.vars.value.id }),
                    path('pim_catalog_group_type_index'),
                    confirmationMessage,
                    '',
                    'flash.association.removed'|trans
                )
            }}
            {{ elements.submitBtn() }}
        {% endset %}

        {% set right %}
            <div class="pull-right entity-updated">
                <span id="updated" class="label label-warning hide">{{ 'info.updated'|trans }}</span>
            </div>
        {% endset %}

        {{ elements.page_header(title, buttons, null, null, right) }}

        {{ elements.form_navbar(['Properties']) }}

        <div class="row-fluid tab-content">

            {{ elements.form_errors(form) }}

            <div class="tab-pane active" id="properties">
                {{ elements.accordion({ 'General Properties': form_row(form.code) }) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
