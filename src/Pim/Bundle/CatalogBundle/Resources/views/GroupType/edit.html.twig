{% extends 'PimCatalogBundle::layout.html.twig' %}

{% oro_title_set({ params: { '%grouptype.label%': form.vars.value.label } }) %}

{% block head_script %}
    {{ parent() }}

    <script type="text/javascript">
        require(
            ['jquery', 'pim/formupdatelistener'],
            function ($, FormUpdateListener){
                'use strict';
                $(function() {
                    new FormUpdateListener($('#{{ form.vars.id }}'));
                });
            }
        );
    </script>
{% endblock %}

{% block content %}
    {{ JSFV(form) }}
    {{ form_start(form, {
        'action': path('pim_catalog_group_type_edit', { id: form.vars.value.id}),
        'attr': {
            'data-updated-title': 'confirmation.leave'|trans,
            'data-updated-message': 'confirmation.discard changes'|trans({ '%entity%': 'group type'|trans })
        }
    }) }}

        {% set title = 'grouptype.edit'|trans ~ ' - ' ~ form.vars.value.label %}

        {% set confirmationMessage = 'confirmation.remove.grouptype'|trans({ '%name%': form.vars.value.label }) %}
        {% set buttons %}
            {{ elements.backLink(path('pim_catalog_group_type_index')) }}
            {{
                elements.deleteLink(
                    path('pim_catalog_group_type_remove', { id: form.vars.value.id }),
                    path('pim_catalog_group_type_index'),
                    confirmationMessage,
                    '',
                    'flash.association.removed'|trans
                )
            }}
            {{ elements.submitBtn() }}
        {% endset %}

        {% set right %}
            <div class="pull-right entity-updated">
                <span id="updated" class="label label-warning hide">{{ 'info.updated'|trans }}</span>
            </div>
        {% endset %}

        {{ elements.page_header(title, buttons, null, null, right) }}

        {{ elements.form_navbar(['Properties']) }}

        <div class="row-fluid tab-content">

            {{ elements.form_errors(form) }}

            <div class="tab-pane active" id="properties">
                {{ elements.accordion({ 'General Properties': form_row(form.code), 'Locale values': form_row(form.label) }) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
