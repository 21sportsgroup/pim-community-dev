{% extends 'PimProductBundle::layout.html.twig' %}

{% set title = 'Families overview'|trans %}

{% block content %}

    <h1>{{ title }} 
        <a class="btn btn-primary pull-right" style="margin-left:10px;"
            href="{{ path('pim_product_productfamily_create') }}">{{ 'New product family'|trans }}</a>
    </h1>

    <table class="table table-bordered table-striped table-condensed">
        <thead>
            <tr>
                <th>{{ 'Name'|trans }}</th>
                <th>{{ 'Description'|trans }}</th>
                <th>{{ 'Attributes'|trans }}</th>
                <th style="width: 50px">{{ 'Edit'|trans }}</th>
                <th style="width: 50px">{{ 'Remove'|trans }}</th>
            </tr>
        </thead>
        <tbody>
        {% for family in families %}
            <tr>
                <td>
                    <a href="{{ path('pim_product_productfamily_edit', { id: family.id }) }}">
                        {{ family.name }}
                    </a>
                </td>
                <td>{{ family.description }}</td>
                <td>
                    <ul>
                    {% for attribute in family.attributes %}
                        <li>{{ attribute }}</li>
                    {% endfor %}
                    </ul>
                </td>
                <td>
                    <a href="{{ path('pim_product_productfamily_edit', { id: family.id }) }}">
                        <i class="icon-edit"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ path('pim_product_productfamily_remove', { id: family.id }) }}">
                        <i class="icon-remove"></i>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <hr />

{% endblock %}
