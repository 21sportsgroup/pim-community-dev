{% extends 'PimProductBundle:ProductFamily:index.html.twig' %}

{% set title = 'New family'|trans %}

{% block familyTab %}
<form action="{{ path('pim_product_productfamily_new') }}" method="POST" class="form-horizontal">
    {{ form_row(form._token) }}

    <div class="form-row">
        <h3>
            {{ title }}
            <button type="submit" class="btn btn-primary pull-right">{{ ' Save'|trans }}</button>
        </h3>
    </div>

    {% if form.vars.errors|length %}
    <div class="alert alert-error">
        {{ form_errors(form) }}
    </div>
    {% endif %}


    <div class="tab-pane active" id="properties">
        <div id="accordion1" class="accordion">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion1" href="#collapseOne">
                        <i class="icon-collapse"></i>
                        {{ "General Properties"|trans }}
                    </a>
                </div>
                <div id="collapseOne" class="accordion-body in">
                    <div class="accordion-inner">
                        {{ form_row(form.code) }}
                    </div>
                </div>
            </div>
        </div>
        <div id="accordion2" class="accordion">
            <div class="accordion-group">
                <div class="accordion-heading">
                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo">
                        <i class="icon-collapse"></i>
                        {{ "Locale values"|trans }}
                    </a>
                </div>
                <div id="collapseTwo" class="accordion-body in">
                    <div class="accordion-inner">
                        {{ form_row(form.name) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
{% endblock %}
