{% extends 'PimProductBundle::layout.html.twig' %}

{% set title = 'Attributes overview'|trans %}
{% block title %}{{ title }} - {{ parent() }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagrid': datagrid, 'selector': '#backgrid'} %}
{% endblock %}

{% block content %}
    <h1>{{ title }}
        <a class="btn btn-primary pull-right" style="margin-left:10px;" 
            href="{{ path('pim_product_productattribute_create') }}">{{ 'New attribute'|trans }}</a>
    </h1>

    <div id="backgrid"></div>
{% endblock %}
