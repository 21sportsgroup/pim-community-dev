{% extends 'PimProductBundle::layout.html.twig' %}

{% set title = 'Attributes overview'|trans %}

{% block head_script %}
    {{ parent() }}
    
    {% include 'OroGridBundle:Include:javascript.html.twig' with {'datagridView': datagrid, 'selector': '#attribute-grid'} %}
    {% include 'OroGridBundle:Include:stylesheet.html.twig' %}
    {% include 'PimProductBundle:ProductAttribute:_js-handler.html.twig' %}
{% endblock %}

{% block page_container %}
<div class="container-fluid">
    {% block content %}
    <div class="row-fluid" id="attribute-container">
        <div id="attribute-group-list" class="sidebar-list">
            <ul>
                <li data-id="0" class="selected">{{ 'All'|trans }}</li>
            {% for group in groups %}
                <li data-id="{{ group.id }}">{{ group }}</li>
            {% endfor %}
                <li data-id="0">{{ 'Unclassified'|trans }}</li>
            </ul>
        </div>
        <div>
            <h1>{{ title }}
                <a class="btn btn-primary pull-right" href="{{ path('pim_product_productattribute_create') }}">{{ 'New attribute'|trans }}</a>
            </h1>
            <div id="attribute-grid"></div>
        </div>
    </div>
    {% endblock %}
</div>
{% endblock %}
