{% extends 'PimProductBundle::layout.html.twig' %}

{% set title = form.vars.value.id ? 'Edit attribute'|trans : 'Add attribute'|trans %}
{% block title %}{{ title }} - {{ parent() }}{% endblock %}

{% block content %}
    {% include 'PimProductBundle:ProductAttribute:form.html.twig' with { 'form': form } %}
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        {% include 'PimUIBundle::measures.html.twig' with measures %}
        {% include 'PimProductBundle:ProductAttribute:_js-validation.html.twig' %}
        {% if form.options is defined %}
            {% include 'PimProductBundle:ProductAttribute:_js-option.html.twig' %}
        {% endif %}
    </script>
{% endblock %}
