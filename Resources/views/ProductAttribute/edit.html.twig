{% extends 'PimProductBundle::layout.html.twig' %}

{% set title = form.vars.value.id ? 'Edit attribute'|trans : 'Add attribute'|trans %}
{% block title %}{{ title }} - {{ parent() }}{% endblock %}

{% block content %}
<form class="form-horizontal" action="{{ form.vars.value.id ?
    path('pim_product_productattribute_edit', { id: form.vars.value.id }) :
    path('pim_product_productattribute_create') }}" method="POST" class="form-register">
    <div class="row-fluid">
        <div class="form-row">
            <h3 class="pull-left">{{ title|trans }}</h3>
            <button class="btn btn-primary pull-right" type="submit">{{ 'Save'|trans }}</button>
            <a class="btn pull-right" href="{{ path('pim_product_productattribute_remove', { id: form.vars.value.id }) }}">
                {{ "Delete" | trans }}
            </a>
            <a class="pull-right" href="{{ path('pim_product_productattribute_index') }}">
                {{ "Back to list" | trans }}
            </a>
        </div>
    </div>

    <div class="row-fluid">
        {% if form.vars.errors|length %}
            <div class="alert alert-error">
                {{ form_errors(form) }}
            </div>
        {% endif %}
        <div id="tabs" style="overflow: inherit;">
            <div class="span2">
                <ul class="nav nav-list">
                    <li class="active"><a href="#tabs-1">{{ "Parameters"|trans }}</a></li>
                    <li><a href="#tabs-2">{{ "Values"|trans }}</a></li>
                    <li><a href="#tabs-3">{{ "Rules"|trans }}</a></li>
                </ul>
            </div>
            <div class="span10">

                <div id="tabs-1">
                    <h3>{{ "Parameters"|trans }}</h3>
                    <div id="accordion1" class="accordion">
                        <div class="accordion-group">
                            <div class="accordion-heading">
                                <a class="accordion-toggle" data-toggle="collapse" data=parent="#accordion1" href="#collapseOne">
                                    {{ "General parameters"|trans }}
                                </a>
                            </div>
                            <div id="collapseOne" class="accordion-body in">
                                <div class="accordion-inner">
                                    <div class="control-group">
                                        {{ form_label(form.code, null, { 'label_attr': {'class': 'control-label'} }) }}
                                        <div class="controls">
                                            {{ form_widget(form.code) }}
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        {{ form_label(form.attributeType, null, { 'label_attr': {'class': 'control-label'} }) }}
                                        <div class="controls">
                                            {{ form_widget(form.attributeType) }}
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        {{ form_label(form.scopable, null, { 'label_attr': {'class': 'control-label'} }) }}
                                        <div class="controls">
                                            {{ form_widget(form.scopable) }}
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        {{ form_label(form.translatable, null, { 'label_attr': {'class': 'control-label'} }) }}
                                        <div class="controls">
                                            {{ form_widget(form.translatable) }}
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        {{ form_label(form.unique, null, { 'label_attr': {'class': 'control-label'} }) }}
                                        <div class="controls">
                                            {{ form_widget(form.unique) }}
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        <label class="control-label" for="limitLanguages">{{ 'Locale specific'|trans }}</label>
                                        <div class="controls">
                                            <input type="checkbox" name="limitLanguages" >
                                        </div>
                                    </div>

                                    <div class="control-group" style="display: none;">
                                        {{ form_label(form.availableLanguages, null, { 'label_attr': {'class': 'control-label'} }) }}
                                        <div class="controls">
                                            {{ form_widget(form.availableLanguages) }}
                                        </div>
                                    </div>

                                    {% if form.defaultValue is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.defaultValue, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.defaultValue) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.dateType is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.dateType, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.dateType) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.dateMin is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.dateMin, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.dateMin) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.dateMax is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.dateMax, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.dateMax) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.negativeAllowed is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.negativeAllowed, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.negativeAllowed) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.decimalPlaces is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.decimalPlaces, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.decimalPlaces) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.numberMin is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.numberMin, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.numberMin) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.numberMax is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.numberMax, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.numberMax) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.defaultCurrency is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.defaultCurrency, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.defaultCurrency) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.valueCreationAllowed is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.valueCreationAllowed, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.valueCreationAllowed) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.maxCharacters is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.maxCharacters, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.maxCharacters) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.wysiwygEnabled is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.wysiwygEnabled, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.wysiwygEnabled) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.metricType is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.metricType, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.metricType) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.defaultMetricUnit is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.defaultMetricUnit, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.defaultMetricUnit) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.allowedFileSources is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.allowedFileSources, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.allowedFileSources) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.maxFileSize is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.maxFileSize, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.maxFileSize) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.allowedFileExtensions is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.allowedFileExtensions, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.allowedFileExtensions) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.validationRule is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.validationRule, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.validationRule) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                    {% if form.validationRegexp is defined %}
                                        <div class="control-group">
                                            {{ form_label(form.validationRegexp, null, { 'label_attr': {'class': 'control-label'} }) }}
                                            <div class="controls">
                                                {{ form_widget(form.validationRegexp) }}
                                            </div>
                                        </div>
                                    {% endif %}

                                </div>
                            </div>
                        </div>
                        <div class="accordion-group">
                            <div class="accordion-heading">
                                <a class="accordion-toggle" data-toggle="collapse" data=parent="#accordion1" href="#collapseTwo">
                                    {{ "Backend parameters"|trans }}
                                </a>
                            </div>
                            <div id="collapseTwo" class="accordion-body in">
                                <div class="accordion-inner">
                                    <div class="control-group">
                                        {{ form_label(form.group, null, { 'label_attr': {'class': 'control-label'} }) }}
                                        <div class="controls">
                                            {{ form_widget(form.group) }}
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        {{ form_label(form.variant, null, { 'label_attr': {'class': 'control-label'} }) }}
                                        <div class="controls">
                                            {{ form_widget(form.variant) }}
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        {{ form_label(form.searchable, null, { 'label_attr': {'class': 'control-label'} }) }}
                                        <div class="controls">
                                            {{ form_widget(form.searchable) }}
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        {{ form_label(form.useableAsGridColumn, null, { 'label_attr': {'class': 'control-label'} }) }}
                                        <div class="controls">
                                            {{ form_widget(form.useableAsGridColumn) }}
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        {{ form_label(form.useableAsGridFilter, null, { 'label_attr': {'class': 'control-label'} }) }}
                                        <div class="controls">
                                            {{ form_widget(form.useableAsGridFilter) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div id="tabs-2">
                    <h3>{{ "Values"|trans }}</h3>
                    <div id="accordion2" class="accordion">
                        <div class="accordion-group">
                            <div class="accordion-heading">
                                <a class="accordion-toggle" data-toggle="collapse" data=parent="#accordion2" href="#collapseThree">
                                    {{ "Label"|trans }}
                                </a>
                            </div>
                            <div id="collapseThree" class="accordion-body in">
                                <div class="accordion-inner">
                                    <div class="control-group">
                                        {{ form_label(form.name, null, { 'label_attr': {'class': 'control-label'} }) }}
                                        <div class="controls">
                                            {{ form_widget(form.name) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-group">
                            <div class="accordion-heading">
                                <a class="accordion-toggle" data-toggle="collapse" data=parent="#accordion2" href="#collapseFour">
                                    {{ "Description"|trans }}
                                </a>
                            </div>
                            <div id="collapseFour" class="accordion-body in">
                                <div class="accordion-inner">
                                    <div class="control-group">
                                        {{ form_label(form.description, null, { 'label_attr': {'class': 'control-label'} }) }}
                                        <div class="controls">
                                            {{ form_widget(form.description) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% if form.options is defined %}
                           {% form_theme form 'PimProductBundle:Form:simple_layout.html.twig' %}
                            <div class="accordion-group">
                                <div class="accordion-heading">
                                    <a class="accordion-toggle" data-toggle="collapse" data=parent="#accordion2" href="#collapseFive">
                                        {{ "Options"|trans }}
                                    </a>
                                </div>
                                <div id="collapseFive" class="accordion-body in">
                                    <div class="accordion-inner">
                                        <table id="sortable_options" class="table table-striped table-hover table-condensed options">
                                            <thead>
                                                <tr>
                                                    <th></th>
                                                    <th>{{ "Default label"|trans }}</th>
                                                    {% for locale in locales %}
                                                        <th>{{ locale.code|trans }}</th>
                                                    {% endfor %}
                                                    <th>{{ "Default value"|trans }}</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for option in form.options %}
                                                    <tr class="att-option">
                                                        <td class="handle">
                                                            <i class="icon-list"></i>
                                                            {{ form_row(option.sort_order) }}
                                                        </td>
                                                        <td>
                                                            {{ form_row(option.defaultValue) }}
                                                        </td>
                                                        {% for i in 0..locales|length-1 %}
                                                            <td>
                                                                {% for value in option.optionValues %}
                                                                    {% if value.locale.vars.value == locales[i].code %}
                                                                        {{ form_row(value.id) }}
                                                                        {{ form_row(value.value) }}
                                                                        {{ form_row(value.locale) }}
                                                                    {% endif %}
                                                                {% endfor %}
                                                            </td>
                                                        {% endfor %}
                                                        <td>
                                                            <input type="radio" name="default_option" value="{{ option.vars.name }}">
                                                        </td>
                                                        {% if disabledLocales is not empty %}
                                                            <td style="display:none;">
                                                                {% for i in 0..disabledLocales|length-1 %}
                                                                    {% for value in option.optionValues %}
                                                                        {% if value.locale.vars.value == disabledLocales[i].code %}
                                                                            {{ form_row(value.id) }}
                                                                            {{ form_row(value.locale) }}
                                                                            {{ form_row(value.value) }}
                                                                        {% endif %}
                                                                    {% endfor %}
                                                                {% endfor %}
                                                            </td>
                                                        {% endif %}
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            {% form_theme form 'form_div_layout.html.twig' %}
                        {% endif %}
                    </div>
                </div>

                <div id="tabs-3">
                    <h3>{{ "Rules"|trans }}</h3>
                    <div id="accordion3" class="accordion">
                        <div class="accordion-group">
                            <div class="accordion-heading">
                                <a class="accordion-toggle" data-toggle="collapse" data=parent="#accordion3" href="#collapseSix">
                                    {{ "Rules"|trans }}
                                </a>
                            </div>
                            <div id="collapseSix" class="accordion-body in">
                                <div class="accordion-inner">
                                    <div class="control-group">
                                        {{ form_label(form.required, null, { 'label_attr': {'class': 'control-label'} }) }}
                                        <div class="controls">
                                            {{ form_widget(form.required) }}
                                        </div>
                                    </div>

                                    <div class="control-group">
                                        {{ form_label(form.smart, null, { 'label_attr': {'class': 'control-label'} }) }}
                                        <div class="controls">
                                            {{ form_widget(form.smart) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        {{ form_row(form.id) }}
        {{ form_row(form._token) }}
    </div>
</form>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        {% include 'PimProductBundle:ProductAttribute:_js-validation.html.twig' %}
        {% if form.options is defined %}
            {% include 'PimProductBundle:ProductAttribute:_js-option.html.twig' %}
        {% endif %}
    </script>
    <link rel="stylesheet" href="{{ asset('bundles/pimui/css/select2.css') }}">
    <script type="text/javascript" src="{{ asset('bundles/pimui/js/select2.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bundles/pimui/js/jquery-ui-1.10.0.min.js') }}"></script>
{% endblock %}
