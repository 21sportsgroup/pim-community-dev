<form id="pim_product_product_quickcreate" method="POST" class="form-horizontal" data-title="{{ 'Create a new product'|trans }}" data-button-submit="{{ 'Create'|trans }}"  data-button-cancel="{{ 'Cancel'|trans }}" action="{{ path('pim_product_product_quickcreate', { dataLocale: dataLocale }) }}" {{ form_enctype(form) }}>

    {% if form.vars.errors|length %}
        <div class="alert alert-error">
            {{ form_errors(form) }}
        </div>
    {% endif %}

    <div class="row-fluid">
        {{ form_row(form.id) }}
        {{ form_row(form.sku) }}
        {{ form_row(form.productFamily, { attr: { 'data-placeholder': 'Choose a product family'|trans }}) }}
        {{ form_row(form.locales, { label: 'Activated locales' }) }}
        {{ form_row(form._token) }}
    </div>

</form>
